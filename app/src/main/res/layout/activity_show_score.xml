<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context="com.example.habebe.projecthomework.activity.ShowScoreActivity">

    <TextView
        android:text="Complete!!!"
        android:textColor="@color/colorFront"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Result :"
        android:textColor="@color/colorFront"
        android:textSize="25dp"
        android:gravity="left"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <TextView
            android:id="@+id/tvCorrect"
            android:textColor="@color/colorFront"
            android:text="Correct :"
            android:layout_marginBottom="10dp"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <TextView
            android:id="@+id/tvShowCorrect"
            android:textColor="@color/colorFront"
            android:layout_marginBottom="10dp"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="wrap_content"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

    <TextView
        android:id="@+id/tvWrong"
        android:textColor="@color/colorFront"
        android:text="Wrong :"
        android:layout_marginBottom="10dp"
        android:layout_width="0dp"
        android:layout_weight="0.4"
        android:layout_height="wrap_content" />


        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <TextView
            android:id="@+id/tvShowWrong"
            android:textColor="@color/colorFront"
            android:layout_marginBottom="10dp"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tvSummary"
            android:textColor="@color/colorFront"
            android:text="Summary Score :"
            android:layout_marginBottom="10dp"
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:layout_height="wrap_content" />


        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <TextView
            android:id="@+id/tvShowSummary"
            android:textColor="@color/colorFront"
            android:layout_marginBottom="10dp"
            android:layout_width="0dp"
            android:layout_weight="1.1"
            android:layout_height="wrap_content"/>

    </LinearLayout>










</LinearLayout>
